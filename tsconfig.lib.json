{
  "$schema": "https://json.schemastore.org/package.json",
  "extends": "@tsconfig/node21/tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "isolatedModules": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler"
  }
}
